@page "/dietplan"

@using DietplannerBlazor.Data
@inject DietplanService PlanService

<p>This component demonstrates fetching data from a service.</p>

@if (dietplans == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Temp. (F)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var dietplan in dietplans)
            {
                <tr>
                    <td>@dietplan.Date.ToShortDateString()</td>
                    <td>@dietplan.TemperatureC</td>
                    <td>@dietplan.TemperatureF</td>
                    <td>@dietplan.Summary</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Dietplan[] dietplans;

    protected override async Task OnInitializedAsync()
    {
        dietplans = await PlanService.GetForecastAsync(DateTime.Now);
    }
}
