@if (_Show)
{

    <div class="modal fade show" id="modal" style="display:block">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">@Title</h4>
                    <button type="button" class="close" data-dismiss="modal" @onclick="Close">x</button>
                </div>
                <div class="modal-body">
                    @ChildContent
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-dark">OK</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal" @onclick="Close">Abbrechen</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}


@code {
    private bool _Show { get; set; }
    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public EventCallback<MouseEventArgs> OnClick { get; set; }

    public void Show()
    {
        _Show = true;
        StateHasChanged();
    }

    public void Close()
    {
        _Show = false;
        StateHasChanged();
    }
}
